{{#each messages as |item|}}
  {{#if item.string}}
    {{#bs-alert visible=true fade=true type=item.type dismissible=true}}
      <p>
        <i class="glyphicon glyphicon-{{item.icon}}"></i>
        {{{item.content}}}
      </p>
    {{/bs-alert}}
  {{else if item.array}}
    {{#bs-alert visible=true fade=true type=item.type dismissible=true}}
      <i class="glyphicon glyphicon-{{item.icon}}"></i>
      <div>
        <ul>
          {{#each item.content as |piece|}}
            <li>{{{piece}}}</li>
          {{/each}}
        </ul>
      </div>
    {{/bs-alert}}
  {{else if item.object}}
    {{#bs-alert visible=true fade=true type=item.type dismissible=true}}
      <i class="glyphicon glyphicon-{{item.icon}}"></i>
      <div>
        {{#if item.content.title}}
          <h4>{{{item.content.title}}}</h4>
        {{/if}}
        {{#if item.content.detail}}
          <p>{{{item.content.detail}}}</p>
        {{/if}}
        {{#if item.content.messages}}
          <ul>
            {{#each item.content.messages as |piece|}}
              <li>{{{piece}}}</li>
            {{/each}}
          </ul>
        {{/if}}
      </div>
    {{/bs-alert}}
  {{else if item.validation}}
    {{#bs-alert visible=true fade=true type=item.type dismissible=true}}
      <i class="glyphicon glyphicon-{{item.icon}}"></i>
      <div>
        <h4>There were problems with the following fields:</h4>
        <ul>
          {{#each item.content as |piece|}}
            <li>{{piece.detail}}</li>
          {{/each}}
        </ul>
      </div>
    {{/bs-alert}}
  {{/if}}
{{/each}}
