{{#authentication-layout subtitle='Recover Password' back=true}}
  {{#bs-form model=model onSubmit=(route-action 'send') as |form|}}
    {{form.element controlType='email' label='Email' placeholder='user@email.com' class='email' property='email'}}
    {{bs-button defaultText='Submit' type='success' buttonType='submit' class='pull-right'}}
  {{/bs-form}}
{{/authentication-layout}}
