{{#bs-navbar tagName='header' position='static-top' as |navbar|}}
  <div class="navbar-header">
    {{#link-to 'index' class='navbar-brand brand'}}
      <i class="glyphicon glyphicon-book"></i>
      Toptal
    {{/link-to}}
  </div>

  {{#navbar.nav class='navbar-right' as |nav|}}
    {{#bs-dropdown tagName='li' as |dd|}}
      {{#dd.toggle}}
        <i class="glyphicon glyphicon-user"></i>
        <span class="user-name">{{user.firstName}}</span>
        <span class="caret"></span>
      {{/dd.toggle}}
      {{#dd.menu}}
        <li>{{link-to 'Sign Out' 'auth.sign-out' id='sign-out'}}</li>
      {{/dd.menu}}
    {{/bs-dropdown}}
  {{/navbar.nav}}

  {{#navbar.nav as |nav|}}
    {{#nav.item}}
      {{#link-to 'dashboard' title='Dashboard'}}
        <i class="glyphicon glyphicon-globe"></i>
      {{/link-to}}
    {{/nav.item}}
  {{/navbar.nav}}
{{/bs-navbar}}
