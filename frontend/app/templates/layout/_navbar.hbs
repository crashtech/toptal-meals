{{#bs-navbar class='sidebar' as |navbar|}}
  {{#navbar.toggle}}
    <span class="sr-only">Toggle menu</span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
  {{/navbar.toggle}}
  {{#navbar.content}}
    {{#if account.user}}
      <nav>
        {{link-to 'Register meal' 'meals.new'}}
        {{link-to 'Meals' 'meals'}}
        {{link-to 'Settings' 'settings'}}
      </nav>
    {{else if account.manager}}
      <section>
        <header>{{link-to 'Users' 'users'}}</header>
        <nav>
          {{link-to 'Create user' 'users.new'}}
        </nav>
      </section>
    {{else if account.admin}}
      <section>
        <header>{{link-to 'Meals' 'meals'}}</header>
        <nav>
          {{link-to 'New meal' 'meals.new'}}
        </nav>
      </section>
      <section>
        <header>{{link-to 'Users' 'users'}}</header>
        <nav>
          {{link-to 'Create user' 'users.new'}}
        </nav>
      </section>
    {{/if}}
  {{/navbar.content}}
{{/bs-navbar}}
